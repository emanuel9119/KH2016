<local:Child_Window x:Class="VN_Editor_KH16.FlowEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VN_Editor_KH16"
        mc:Ignorable="d"
        Title="Flow Editor" Height="300" Width="300"
        Closing="Window_Closing"
        Activated="Window_Active"
        Deactivated="Window_Deactive"
        LocationChanged="Window_Moved">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="97*" />
            <ColumnDefinition Width="95*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0"  Content="Add to window" Click="Window_Dropped" />
        <Canvas Name="test2" Grid.Column="0" Grid.Row="1">

        </Canvas>
        <Canvas Background="Transparent" Grid.Column="1" Grid.Row="1" Name="FlowCanv" Grid.ColumnSpan="2" AllowDrop="True"
            DragOver="panel_DragOver"
            Drop="panel_Drop">

        </Canvas>
    </Grid>
</local:Child_Window>
